<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        style="@style/main_overlay_top_bar_container">
        <ImageButton
            android:visibility="gone"
            android:layout_width="32dip"
            android:layout_height="32dip"
            android:id="@+id/add_follow_user_btn"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="39dip"
            android:background="@drawable/omp_following_addidicon_image_selector"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginRight="44dip"
            android:layout_toLeftOf="@+id/add_follow_user_btn"
            android:textColor="@android:color/white"
            android:text="@string/omp_legend_of_the_turret"
            android:textSize="18sp"
            android:gravity="left"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <mobisocial.omlib.ui.view.RecyclerView
            android:id="@+id/items_container"
            android:scrollbars="vertical"
            android:scrollbarStyle="outsideOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>

        <ScrollView
            android:id="@+id/empty_following"
            android:layout_width="match_parent"
            android:layout_height="fill_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/view_group_hint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/omplay_icon"
                        android:layout_width="66dip"
                        android:layout_height="66dip"
                        android:src="@drawable/omp_btn_blankpage_omletlogo"
                        android:background="@null"/>
                    <TextView
                        android:id="@+id/text_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22dip"
                        android:text="@string/omp_no_players_followed_instruction"
                        android:textSize="14sp"
                        android:textColor="@color/gray_background_9b9b9b"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/view_group_find_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_group_hint"
                    android:layout_marginTop="44dip"
                    android:layout_marginBottom="38dip"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/omp_find_people"
                        android:textSize="12sp"
                        android:textColor="@color/gray_background_9b9b9b"/>
                    <LinearLayout
                        android:id="@+id/view_group_recommend_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>
</LinearLayout>
