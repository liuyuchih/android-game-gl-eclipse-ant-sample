<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:background="@drawable/omo_snackbar_small_background"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/omp_ic_miniview_noti_short"/>

    <TextView android:id="@+id/chat_notifications_for"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:layout_marginRight="5dp"
        android:maxLines="4"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button android:id="@+id/turn_off"
        android:layout_width="60dp"
        android:layout_height="18dp"
        android:textAllCaps="false"
        android:layout_marginRight="7dp"
        android:textSize="12sp"
        android:text="@string/omp_turn_off"
        android:background="@drawable/omo_snackbar_settings_button"/>

    <Button android:id="@+id/cancel"
        android:text="@string/omp_cancel"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:layout_marginRight="10dp"
        android:layout_width="60dp"
        android:layout_height="18dp"
        android:background="@drawable/omo_snackbar_cancel_button"/>


