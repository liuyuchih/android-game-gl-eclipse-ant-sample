<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c3000000">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <cards.user.cardlib.ui.view.UserCardView
            android:id="@+id/card"
            android:layout_width="350dp"
            android:layout_height="220dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/card"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp">
            <TextView
                android:id="@+id/intro_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textStyle="bold|italic"
                android:textColor="#ffffff"/>
            <TextView
                android:id="@+id/intro_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textSize="17sp"
                android:textColor="#ffffff"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp">
                <ImageView
                    android:id="@+id/get_card_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxHeight="55dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/btn_share"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:id="@+id/get_card_button_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_intro_get_card"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="17sp"
                    android:layout_alignLeft="@id/get_card_button"
                    android:layout_alignRight="@id/get_card_button"
                    android:layout_alignTop="@id/get_card_button"
                    android:layout_alignBottom="@id/get_card_button"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout><!-- From: file:/Users/tj/Developer/omlib/omlib-cards/src/main/res/layout-land/fragment_intro.xml --><!-- From: file:/Users/tj/Developer/omlib/glreclib-shell/build/intermediates/exploded-aar/omlib/omlib-cards/unspecified/res/layout-land/fragment_intro.xml -->